<p><%= @post.errors.full_messages.join(', ') %></p>
<%= form_for @post do |p| %>
  <div>
    <%= p.label :title %>
    <%= p.text_field :title %>
  </div>
  <div>
    <%= p.label :body %>
    <%= p.text_area :body %>
  </div>
  <div>
  <%= p.collection_select :category_id, Category.order(:name), :id, :name %>
</div>
  <%= p.submit %>
<% end %>
